---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Panel de Administración" classess="display-flex justify-content-center align-items-flex-start">
    <main class="desktop display-flex justify-content-center align-content-flex-end align-items-flex-end flex-wrap-wrap-reverse">
        <h1 class="bold-heading order-3 titulo-desktop">Panel de Administración</h1>
        <div id="container" class="dropdownContainer">
            <button onclick="cambiarEstado()" id="menu-boton" class="dropEventos grid-item boton-dropdown">
                <h2 class="bold-heading titulo-2-desktop">Eventos</h2>
            </button>
            <ol id="menuEventos" class="contenidoDespliegue grid-item">
                <li class="bold-paragraph"><p>#</p><p>Nombre del evento</p><p>Horas por subevento</p><p>Horas por evento</p></li>
                <li class="dropEvento regular-paragraph"><p>1</p><p class="titulo">Festival del Emprendimiento</p><p>10</p><p>10</p></li>
                <li class="dropEvento regular-paragraph"><p>2</p><p class="titulo">Festival del Emprendimiento</p><p>10</p><p>10</p></li>
            </ol>
            <button class="grid-item naranja bold-paragraph boton-dropdown" onclick="escritura('evento')">Crear evento</button>
            <button class="grid-item naranja bold-paragraph boton-dropdown" onclick="escritura('evento')">Editar evento</button>
        </div>
        <div class="descarga">
            <h2 class="bold-heading titulo-2-desktop">Descarga</h2>
            <p class="regular-paragraph">Descargar todos</p>
            <button class="morado texto-blanco sin-borde bold-paragraph">.csv</button>
            <button class="rosa texto-blanco sin-borde bold-paragraph">.json</button>
            <p class="regular-paragraph">Descargar uno</p>
            <button class="morado texto-blanco sin-borde bold-paragraph">.csv</button>
            <button class="rosa texto-blanco sin-borde bold-paragraph">.json</button>
        </div>
    </main>
    <script is:inline src="/scripts/escritura.js"></script>
    <script is:inline src="/scripts/dropdown.js"></script>
</Layout>

