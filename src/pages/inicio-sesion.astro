---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Inicio de Sesión" classess="display-flex justify-content-center align-items-center">
    <main class="ingreso display-flex justify-content-flex-start flex-direction-column glass">
        <form class="display-flex flex-direction-column align-items-center" action="php/inicioSesion.php" method="POST">
            <h1 class="bold-heading texto-central">Inicio de <br>Sesión</h1>  
            <div class="numeroCuenta display-flex flex-direction-column regular-paragraph">
                <label for="numero-cuenta">Número de Cuenta:</label>
                <input type="number" name="numero-cuenta" id="numeroCuenta" class="redondeado">
            </div>
            <div class="contrasena display-flex flex-direction-column regular-paragraph">
                <label for="contrasena">Contraseña</label>
                <input type="password" name="contrasena" id="contrasena" class="redondeado">
            </div>
            <div class="enviar display-flex justify-content-center">
                <button type="submit" class="morado bold-paragraph texto-blanco texto-medio redondeado sin-borde largo alto" class="redondeado">Iniciar Sesión</button>
            </div>
        </form>
    </main>
</Layout>